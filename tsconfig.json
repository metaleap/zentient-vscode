{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "outDir": "out",
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noEmitHelpers": true,
        "alwaysStrict": true,
        "noEmitOnError": false,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": false,
        "pretty": false,
        "removeComments": true,
        // "strictNullChecks": true, // would prefer this, if TSC were actually *smart* about it; as it is currently, impractical
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "."
    },
    "exclude": [
        "bin",
        "files",
        "node_modules",
        "_notes_misc_etc",
        "out"
    ]
}
